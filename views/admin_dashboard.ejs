  <!-- Meta tag para responsividade -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <style>
    /* Estilos personalizados, se necess√°rio */
    body {
      background-color: #f8f9fa;
    }
    .dashboard-header {
