  <!-- Conte√∫do do Dashboard -->
  <div class="container">
    <div class="dashboard-header text-center">
      <h2>Bem-vindo, <%= admin.nome %></h2>
    </div>

    <!-- Mensagens de feedback -->
    <div id="flash-messages">
      <% if (success_msg) { %>
        <div class="alert alert-success alert-dismissible fade" role="alert" id="success-alert" style="display: none;">
          <%= success_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <% if (error_msg) { %>
        <div class="alert alert-danger alert-dismissible fade" role="alert" id="error-alert" style="display: none;">
          <%= error_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
    </div>

    <!-- Resetar F√©rias -->
    <div class="container mt-4">
      <h3>Resetar F√©rias</h3>
      <form action="/users/reset-vacations" method="POST">
        <div class="mb-3">
          <label for="matricula_reset" class="form-label">Matr√≠cula do usu√°rio:</label>
          <input type="text" name="matricula" id="matricula_reset" class="form-control" placeholder="Digite a matr√≠cula" required maxlength="8" oninput="this.value = this.value.slice(0, 8);">
        </div>
        <button type="submit" class="btn btn-warning">Resetar F√©rias</button>
      </form>
    </div>
    
    <!-- Apagar Matr√≠cula -->
    <div class="container mt-4">
      <h3>Apagar Matr√≠cula</h3>
      <form action="/users/delete-user" method="POST">
        <div class="mb-3">
          <label for="matricula_delete" class="form-label">Matr√≠cula do usu√°rio:</label>
          <input type="text" name="matricula" id="matricula_delete" class="form-control" placeholder="Digite a matr√≠cula" required maxlength="8" oninput="this.value = this.value.slice(0, 8);">
        </div>
        <button type="submit" class="btn btn-danger">Apagar Matr√≠cula</button>
      </form>
    </div>
    
    <!-- Controle de Vagas por Categoria -->
    <div class="container mt-4">
      <h3>Controle de Vagas por Categoria</h3>
      <!-- C√°lculo dos totais de servidores por cargo -->
      <% 
        let totalIPC = 0, totalEPC = 0, totalDPC = 0;
        users.forEach(function(u) {
          if (u.categoria === 'IPC') totalIPC++;
          else if (u.categoria === 'EPC') totalEPC++;
          else if (u.categoria === 'DPC') totalDPC++;
        });
      %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th style="width: 33.33%;">cargo</th>
            <th style="width: 33.33%;">M√°ximo permitido por per√≠odo</th>
            <th style="width: 33.33%;">Quantidade de servidores total</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>IPC</td>
            <td><%= settings.max_ipc %></td>
            <td><%= totalIPC %></td>
          </tr>
          <tr>
            <td>EPC</td>
            <td><%= settings.max_epc %></td>
            <td><%= totalEPC %></td>
          </tr>
          <tr>
            <td>DPC</td>
            <td><%= settings.max_dpc %></td>
            <td><%= totalDPC %></td>
          </tr>
        </tbody>
      </table>
    </div>
    
    <!-- Configura√ß√£o de Limites -->
    <div class="container mt-4">
      <h3>Configura√ß√£o de Limites</h3>
      <form action="/users/update-limits" method="POST">
        <div class="row">
          <div class="col-md-4">
            <label for="max_ipc">M√°ximo de IPCs em f√©rias:</label>
            <input type="number" name="max_ipc" id="max_ipc" value="<%= settings.max_ipc %>" class="form-control">
          </div>
          <div class="col-md-4">
            <label for="max_epc">M√°ximo de EPCs em f√©rias:</label>
            <input type="number" name="max_epc" id="max_epc" value="<%= settings.max_epc %>" class="form-control">
          </div>
          <div class="col-md-4">
            <label for="max_dpc">M√°ximo de DPCs em f√©rias:</label>
            <input type="number" name="max_dpc" id="max_dpc" value="<%= settings.max_dpc %>" class="form-control">
          </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Confirmar</button>
      </form>
    </div>
    
    <div class="dashboard-header text-center">
      <h2>Cassifica√ß√£o dos servidores j√° cadastrados</h2>
    </div>


    <!-- Tabela de Usu√°rios -->
    <div class="table-responsive mt-4">
      <table class="table table-striped table-bordered">
        <thead class="table-dark">
          <tr>
            <th>cargo</th>
            <th>Matr√≠cula</th>
            <th>Nome</th>
            <th>Ano</th>
            <th>Gest.</th>
            <th>Qtd. Filhos</th>
            <th>Estud.</th>
            <th>Data de Ingresso</th>
            <th>Antig.</th>
            <th>C√¥nj. serv</th>
            <th>Data de Nascimento</th>
            <th>Idade</th>
            <th>Per√≠odo Aquisitivo (In√≠cio)</th>
            <th>Per√≠odo Aquisitivo (Fim)</th>
            <th>N¬∫</th>
            <th>F√©rias</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.categoria %></td>
              <td><%= user.matricula %></td>
              <td><%= user.nome %></td>
              <td><%= user.ano_referencia %></td>
              <td><%= user.gestante ? 'Sim' : 'N√£o' %></td>
              <td><%= user.qtd_filhos %></td>
              <td><%= user.estudante ? 'Sim' : 'N√£o' %></td>
              <td><%= new Date(user.data_ingresso).toLocaleDateString() %></td>
              <td><%= user.data_ingresso_dias %></td>
              <td><%= user.possui_conjuge ? 'Sim' : 'N√£o' %></td>
              <td><%= new Date(user.data_nascimento).toLocaleDateString() %></td>
              <td><%= user.data_nascimento_dias %></td>
              <td><%= new Date(user.periodo_aquisitivo_inicio).toLocaleDateString() %></td>
              <td><%= new Date(user.periodo_aquisitivo_fim).toLocaleDateString() %></td>
              <td><%= user.classificacao %></td>
              <td>
                <% if (user.Vacations.length > 0) { %>
                  <% user.Vacations.forEach(vacation => { %>
                    <p>üóìÔ∏è <%= new Date(vacation.data_inicio).toLocaleDateString() %> at√© <%= new Date(vacation.data_fim).toLocaleDateString() %></p>
                  <% }); %>
                <% } else { %>
                  <span class="text-muted">Nenhuma</span>
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap 5 JS Bundle -->
  <script src="/js/bootstrap.bundle.min.js"></script>
  
  <!-- Script para exibir os alertas com fade in -->
  <script>
    document.addEventListener("DOMContentLoaded", function(){
      function showAlert(alertId) {
        const alertEl = document.getElementById(alertId);
        if (alertEl && alertEl.textContent.trim() !== "") {
          alertEl.style.display = "block";
          void alertEl.offsetWidth;
          alertEl.classList.add("show");
        }
      }
      showAlert("success-alert");
      showAlert("error-alert");
    });
  </script>
  
  <!-- Script para atualizar os campos de data final com base nos in√≠cios e na op√ß√£o selecionada -->
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      // Fun√ß√£o para somar dias a uma data
      function addDays(date, days) {
        const result = new Date(date);
        result.setDate(result.getDate() + days);
        return result;
      }

      // Fun√ß√£o para formatar a data no formato YYYY-MM-DD
      function formatDate(date) {
        return date.toISOString().split("T")[0];
      }

      // Fun√ß√£o para atualizar o campo de data final de um per√≠odo
      function updateEndDate(periodIndex, durationDays) {
        const inicioInput = document.getElementById(`periodo${periodIndex}_inicio`);
        const fimInput = document.getElementById(`periodo${periodIndex}_fim`);
        if (inicioInput.value) {
          const startDate = new Date(inicioInput.value);
          const endDate = addDays(startDate, durationDays - 1);
          fimInput.value = formatDate(endDate);
        }
      }

      // Fun√ß√£o para atualizar os campos de data final com base na op√ß√£o selecionada
      function updateAllEndDates() {
        const qtd = document.getElementById('qtd_periodos').value;
        if (qtd === "1") {
          updateEndDate(1, 30);
        } else if (qtd === "2_10_20") {
          updateEndDate(1, 10);
          updateEndDate(2, 20);
        } else if (qtd === "2_15_15") {
          updateEndDate(1, 15);
          updateEndDate(2, 15);
        } else if (qtd === "2_20_10") {
          updateEndDate(1, 20);
          updateEndDate(2, 10);
        } else if (qtd === "3") {
          updateEndDate(1, 10);
          updateEndDate(2, 10);
          updateEndDate(3, 10);
        }
      }

      // Atualiza os campos de data final quando as datas de in√≠cio mudarem
      ['periodo1_inicio', 'periodo2_inicio', 'periodo3_inicio'].forEach(id => {
        const input = document.getElementById(id);
        if (input) {
          input.addEventListener("change", updateAllEndDates);
        }
      });

      // Atualiza os campos de data final ao mudar a op√ß√£o de per√≠odos
      document.getElementById("qtd_periodos").addEventListener("change", updateAllEndDates);
    });
  </script>
  
  <!-- Script para a sele√ß√£o de data de ingresso via lista suspensa -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const btnSelecionarData = document.getElementById("btnSelecionarData");
      const listaDatas = document.getElementById("listaDatas");
      const inputData = document.getElementById("data_ingresso");
  
      btnSelecionarData.addEventListener("click", function () {
        listaDatas.style.display = listaDatas.style.display === "none" ? "block" : "none";
      });
  
      document.querySelectorAll(".selecionar-data").forEach(item => {
        item.addEventListener("click", function () {
          const dataBr = this.textContent.trim(); // Ex: "15/08/2023"
          const [dia, mes, ano] = dataBr.split("/");
          const dataIso = `${ano}-${mes}-${dia}`;
          inputData.value = dataIso;
          listaDatas.style.display = "none";
          // Atualiza os per√≠odos aquisitivos, se necess√°rio (chame uma fun√ß√£o, por exemplo)
        });
      });
  
      document.addEventListener("click", function (event) {
        if (!btnSelecionarData.contains(event.target) && !listaDatas.contains(event.target)) {
          listaDatas.style.display = "none";
        }
      });
    });
  </script>
  
</body>
</html>
