<!DOCTYPE html>
<html>
<head>
  <title>Dashboard do Administrador</title>
  <!-- Meta tag para responsividade -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <style>
    /* Estilos personalizados, se necess√°rio */
    body {
      background-color: #f8f9fa;
    }
    .dashboard-header {
      margin-top: 20px;
      margin-bottom: 20px;
    }
  </style>
  
  
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="#">Sistema de F√©rias</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/users/register">Cadastrar Usu√°rio</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/auth/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Conte√∫do do Dashboard -->
  <div class="container">
    <div class="dashboard-header text-center">
      <h2>Bem-vindo, <%= admin.nome %></h2>
    </div>

    <!-- Mensagens de feedback - Alertas ocultos por padr√£o -->
    <div id="flash-messages">
      <% if (success_msg) { %>
        <div class="alert alert-success alert-dismissible fade" role="alert" id="success-alert" style="display: none;">
          <%= success_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <% if (error_msg) { %>
        <div class="alert alert-danger alert-dismissible fade" role="alert" id="error-alert" style="display: none;">
          <%= error_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
    </div>


    
    
    <div class="container mt-4">
      <h3>Resetar F√©rias</h3>
      <form action="/users/reset-vacations" method="POST">
        <div class="mb-3">
          <label for="matricula_reset" class="form-label">Matr√≠cula do usu√°rio:</label>
          <input type="text" name="matricula" id="matricula_reset" class="form-control" placeholder="Digite a matr√≠cula" required maxlength="8" oninput="this.value = this.value.slice(0, 8);">
        </div>
        <button type="submit" class="btn btn-warning">Resetar F√©rias</button>
      </form>
    </div>
    
    <div class="container mt-4">
      <h3>Apagar Matr√≠cula</h3>
      <form action="/users/delete-user" method="POST">
        <div class="mb-3">
          <label for="matricula_delete" class="form-label">Matr√≠cula do usu√°rio:</label>
          <input type="text" name="matricula" id="matricula_delete" class="form-control" placeholder="Digite a matr√≠cula" required maxlength="8" oninput="this.value = this.value.slice(0, 8);">
        </div>
        <button type="submit" class="btn btn-danger">Apagar Matr√≠cula</button>
      </form>
    </div>
    
    <div class="container mt-4">
      <h3>Controle de Vagas por Categoria</h3>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Categoria</th>
            <th>Quantidade de servidores</th>
            <th>M√°ximo Permitido por per√≠odo</th>
            
            
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>IPC</td>
            <td><%= settings.max_ipc %></td>
            
            
          </tr>
          <tr>
            <td>EPC</td>
            <td><%= settings.max_epc %></td>
            
            
          </tr>
          <tr>
            <td>DPC</td>
            <td><%= settings.max_dpc %></td>
            
            
          </tr>
        </tbody>
      </table>
    </div>
    



    <div class="container">
      <h3>Configura√ß√£o de Limites</h3>
      <form action="/users/update-limits" method="POST">
        <div class="row">
          <div class="col-md-4">
            <label for="max_ipc">M√°ximo de IPCs em f√©rias:</label>
            <input type="number" name="max_ipc" id="max_ipc" value="<%= settings.max_ipc %>" class="form-control">
          </div>
          <div class="col-md-4">
            <label for="max_epc">M√°ximo de EPCs em f√©rias:</label>
            <input type="number" name="max_epc" id="max_epc" value="<%= settings.max_epc %>" class="form-control">
          </div>
          <div class="col-md-4">
            <label for="max_dpc">M√°ximo de DPCs em f√©rias:</label>
            <input type="number" name="max_dpc" id="max_dpc" value="<%= settings.max_dpc %>" class="form-control">
          </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Confirmar</button>
      </form>
    </div>
    




    <!-- Tabela responsiva -->
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead class="table-dark">
          <tr>
            <th>cargo</th>
            <th>Matr√≠cula</th>
            <th>Nome</th>
            <th>Ano</th>
            <th>Gest.</th>
            <th>Qtd. Filhos</th>
            <th>Estud.</th>
            <th>Data de Ingresso</th>
            <th>Antig.</th>
            <th>C√¥nj. serv</th>
            <th>Data de Nascimento</th>
            <th>Idade</th>
            <th>Per√≠odo Aquisitivo (In√≠cio)</th>
            <th>Per√≠odo Aquisitivo (Fim)</th>
            <th>N¬∫</th>
            <th>F√©rias</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.categoria %></td>
              <td><%= user.matricula %></td>
              <td><%= user.nome %></td>
              <td><%= user.ano_referencia %></td>
              <td><%= user.gestante ? 'Sim' : 'N√£o' %></td>
              <td><%= user.qtd_filhos %></td>
              <td><%= user.estudante ? 'Sim' : 'N√£o' %></td>
              <td><%= new Date(user.data_ingresso).toLocaleDateString() %></td>
              <td><%= user.data_ingresso_dias %></td>
              <td><%= user.possui_conjuge ? 'Sim' : 'N√£o' %></td>
              <td><%= new Date(user.data_nascimento).toLocaleDateString() %></td>
              <td><%= user.data_nascimento_dias %></td>
              <td><%= new Date(user.periodo_aquisitivo_inicio).toLocaleDateString() %></td>
              <td><%= new Date(user.periodo_aquisitivo_fim).toLocaleDateString() %></td>
              <td><%= user.classificacao %></td>
              <td>
                <% if (user.Vacations.length > 0) { %>
                  <% user.Vacations.forEach(vacation => { %>
                    <p>üóìÔ∏è <%= new Date(vacation.data_inicio).toLocaleDateString() %> at√© <%= new Date(vacation.data_fim).toLocaleDateString() %></p>
                  <% }); %>
                <% } else { %>
                  <span class="text-muted">Nenhuma</span>
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap 5 JS Bundle -->
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function(){
      // Fun√ß√£o para exibir o alerta com fade in
      function showAlert(alertId) {
        const alertEl = document.getElementById(alertId);
        if (alertEl && alertEl.textContent.trim() !== "") {
          alertEl.style.display = "block";
          // For√ßa o reflow para que a transi√ß√£o ocorra
          void alertEl.offsetWidth;
          alertEl.classList.add("show");
        }
      }
  
      showAlert("success-alert");
      showAlert("error-alert");
    });
  </script>
  
  
</body>
</html>
