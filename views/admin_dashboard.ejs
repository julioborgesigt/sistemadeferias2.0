            },
            layout: {
              paddingLeft: function(i, node) { return 2; },
              paddingRight: function(i, node) { return 2; },
              paddingTop: function(i, node) { return 1; },
              paddingBottom: function(i, node) { return 1; }
            }
          }
        ],
        defaultStyle: {
          fontSize: 10
        }
      };
      pdfMake.createPdf(docDefinition).download(filename);
    }



